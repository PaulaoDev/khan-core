{
    "name": "paulaodev/khan-core",
    "description": "Core khan framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "PaulaoDev",
            "email": "jskhanframework@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "catfan/Medoo": "^1.4",
        "twig/twig": "^1.3|^2.0",
        "nesbot/carbon": "^1.22",
        "vlucas/phpdotenv": "^2.4",
        "phpmailer/phpmailer": "^6.0",
        "symfony/console": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Command\\": "src/Khan/KhanCli/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MyApp\\": "app/",
            "Middlewares\\": "app/http/middlewares/",
            "StrategysAuth\\": "config/strategy/",
            "Models\\": "app/models/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "require-dev": {
        "phpunit/phpunit": "7.3.1"
    },
    "scripts": {
        "server": "php khan server",
        "tests": "./vendor/bin/phpunit --colors=auto  tests/unit TesteKhan"
    }
}
